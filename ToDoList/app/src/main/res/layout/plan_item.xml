<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#816D6D"
    android:layout_margin="10dp"
    android:id="@+id/parent"
    app:cardElevation="20dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name of the activity"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:id="@+id/txtPlanItemName"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time:"
            android:id="@+id/txtTime"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/txtPlanItemName"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:layout_toRightOf="@+id/txtTime"
            android:layout_below="@+id/txtPlanItemName"
            android:layout_marginBottom="5dp"
            android:id="@+id/txtMinutes"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Day:"
            android:textStyle="bold"
            android:layout_below="@+id/txtTime"
            android:id="@+id/someday"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="min"
            android:layout_toRightOf="@+id/txtMinutes"
            android:layout_below="@+id/txtPlanItemName"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtMinutes"
            android:layout_toRightOf="@+id/someday"
            android:text="monday"
            android:id="@+id/txtDay"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:src="@drawable/ic_plan_circle"
            android:id="@+id/unCheckedImage"
            android:visibility="visible"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:id="@+id/CheckedImage"
            android:src="@drawable/ic_checked_circle"
            android:visibility="gone"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>